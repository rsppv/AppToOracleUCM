<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — приложение ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/bootstrap")
        @{
            String strEn = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            String strRus = "АБВГДЕЖЗИКЛМНОПРСТУФХЦЧШЩЭЮЯ";
        }
        <style>
            body {
                padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
            }
        </style>
    </head>

    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/Home/Index">Ваша эмблема здесь</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                            <li>@Html.ActionLink("О программе", "About", "Home")</li>
                            <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                        </ul>
                        <form class="navbar-form pull-right" method="post" action="/Doc/FormSearch">
                            <div class="input-append">
                                 <input type="text" class="span3" name="q">
                                 <button type="submit" class="btn">Найти</button>
                            </div>
                        </form>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                    <div class="well sidebar-nav">
                        <div class="row-fluid">
                            <div class="span6">
                                <ul class="nav nav-list">
                                     <li class="nav-header text-center">Анг</li>
                                    @for (int i = 0; i < strEn.Length; i++)
                                    {
                                        <li class="text-center">
                                            @Html.ActionLink(strEn[i].ToString(), "LetterSearch", "Doc",
                                                new { q = strEn[i].ToString() }, null)
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="span6">
                                <ul class="nav nav-list">
                                     <li class="nav-header text-center">Рус</li>
                                    @for (int i = 0; i < strRus.Length; i++)
                                    {
                                        <li class="text-center">
                                            @Html.ActionLink(strRus[i].ToString(), "LetterSearch", "Doc",
                                                new { q = strRus[i].ToString() }, null)
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                    <!--/.well -->
                </div>
                <!--/span-->
                <div class="span10">
                    @if (IsSectionDefined("featured"))
                    {
                        <div class="hero-unit">
                            @RenderSection("featured", required: false)
                        </div>
                     }
                    @RenderBody()
                </div>
                <!--/span-->
            </div>
            <!--/row-->

            <hr>

            <div id="footer">
                <div class="container">
                    <p class="muted credit">Разработано для <a href="http://tpu.ru">ТПУ</a> Распоповым Александром.</p>
                </div>
            </div>

        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Script/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
       
        
        
        
        
        
        
                
        


