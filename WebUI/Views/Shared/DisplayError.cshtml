@model System.Exception

@{
    ViewBag.Title = "DisplayError";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
        </div>
    </section>
}

<fieldset>
    <legend>Error</legend>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Message)</dt>
        <dd>@Html.DisplayFor(model => model.Message)</dd>


        <dt>@Html.DisplayNameFor(model => model.Source)</dt>
        <dd>@Html.DisplayFor(model => model.Source)</dd>

        <dt>@Html.DisplayNameFor(model => model.StackTrace)</dt>
        <dd>@Html.DisplayFor(model => model.StackTrace)</dd>
    </dl>
</fieldset>
