@model DomainModel.Entity.Document

@{
    ViewBag.Title = "Информация о документе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Дополнительная информация о документе</h2>

<fieldset>
    <legend>
        @Model.FullTitle
    </legend>

    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
           

        <dt>Полное название</dt>
        <dd>@Html.DisplayFor(model => model.FullTitle)</dd>


        <dt>Тип</dt>
        <dd> @Html.DisplayFor(model => model.Type)</dd>


        <dt>Авторы</dt>
        <dd>@Html.DisplayFor(model => model.Author)</dd>


        <dt>Дата создания</dt>
        <dd>@Html.DisplayFor(model => model.CreateDate)</dd>


        <dt>Размер файла</dt>
        <dd>@Html.DisplayFor(model => model.FileSize)</dd>


        <dt>Расширение</dt>
        <dd>@Html.DisplayFor(model => model.Extension)</dd>

        
        <dt>Формат документа</dt>
        <dd>@Html.DisplayFor(model => model.Format)</dd>

        <dt>Аннотация</dt>
        <dd>@Html.DisplayFor(model => model.Annotation)</dd>


       
         <!-- Правка названий -->

        <dt>Ключевые слова</dt>
        <dd>@Html.DisplayFor(model => model.Keywords)</dd>


        <dt>Соавторы</dt>
        <dd>@Html.DisplayFor(model => model.CoAuthor)</dd>

        <dd>
            @Html.ActionLink("Скачать", "DownloadFile", "Doc", new { id = Model.ID }, 
                new { @class="pull-right btn btn-primary" })
        </dd>
    </dl>
</fieldset>

